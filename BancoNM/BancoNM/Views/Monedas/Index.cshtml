@model IEnumerable<BancoNM.Monedas>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_compartido.cshtml";
}

<h2>Inicio</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.idMoneda }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.idMoneda }) |
            @Html.ActionLink("Borrar", "Delete", new { id = item.idMoneda })
        </td>
    </tr>
}

</table>
