@model IEnumerable<BancoNM.CreditoCA>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_compartido.cshtml";
}

<h2>Inicio</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")<br /><br />
    <a href="/navegacion/Mantenimientos_" class="btn btn-success">Volver a los mantenimientos</a>
</p>
<table class="table table-dark">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.monto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CuentaA.numCuenta)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.monto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CuentaA.numCuenta)
        </td>
        <td>
            @Html.ActionLink("Edit", "Editar", new { id=item.numTrans }) |
            @Html.ActionLink("Details", "Detalles", new { id=item.numTrans }) |
            @Html.ActionLink("Delete", "Borrar", new { id=item.numTrans })
        </td>
    </tr>
}

</table>
